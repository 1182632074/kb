#:import C kivy.utils.get_color_from_hex
#:set PAD 20

FloatLayout:
    Game2048Board:
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        size_hint: (None, None)
        center: root.center
        size: [min(root.width, root.height) - 2 * PAD] * 2

        canvas.before:
            BorderImage:
                pos: self.pos
                size: self.size
                source: 'board.png'
                border: (10, 10, 10, 10)

            Color:
                rgb: C('ccc0b4')

            BorderImage:
                pos: self.cell_pos[0][0]
                size: self.cell_size
                source: 'cell.png'
                border: (10, 10, 10, 10)

            BorderImage:
                pos: self.cell_pos[0][1]
                size: self.cell_size
                source: 'cell.png'
                border: (10, 10, 10, 10)

            BorderImage:
                pos: self.cell_pos[0][2]
                size: self.cell_size
                source: 'cell.png'
                border: (10, 10, 10, 10)

            BorderImage:
                pos: self.cell_pos[0][3]
                size: self.cell_size
                source: 'cell.png'
                border: (10, 10, 10, 10)
