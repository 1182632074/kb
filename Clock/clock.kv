BoxLayout:
    orientation: 'vertical'

    Label:
        id: time
        text: '[b]00[/b]:00:00'
        font_name: 'Roboto'
        font_size: 48
        markup: True

    BoxLayout:
        height: 90
        orientation: 'horizontal'
        padding: 20
        spacing: 20
        size_hint: (1, None)

        Button:
            text: 'Start'
            font_name: 'Roboto'
            font_size: 24
            bold: True
            background_normal: 'button_normal.png'
            background_down: 'button_down.png'
            border: (2, 2, 2, 2)

        Button:
            text: 'Reset'
            font_name: 'Roboto'
            font_size: 24
            bold: True
            background_normal: 'red_button_normal.png'
            background_down: 'red_button_down.png'
            border: (2, 2, 2, 2)

    Label:
        id: stopwatch
        text: '00:00.[size=40]00[/size]'
        font_name: 'Roboto'
        font_size: 48
        markup: True
